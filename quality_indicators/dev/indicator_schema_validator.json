{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://everse.software/indicator_schema.json",
    "type": "object",
    "default": {},
    "title": "EVERSE indicator schema",
    "required": [
        "authors",
        "contacts",
        "identifier",
        "release-date"
    ],
    "$defs": {
    },
    "properties": {
        "identifier": {
            "type": "string",
            "default": "",
            "title": "The identifier of the indicator",
            "examples": [
                "Some-Identifier"
            ]
        },
        "name": {
            "type": "string",
            "default": "",
            "title": "The name of the indicator",
            "examples": [
                "indicator name"
            ]
        },
        "description": {
            "type": "string",
            "default": "",
            "title": "The description of the indicator",
            "examples": [
                "a short description"
            ]
        },
        "keywords": {
            "type": "array",
            "default": [],
            "title": "The keywords of the indicator",
            "items": {
                "type": "string",
                "title": "A keyword for the indicator",
                "enum": ["keyword-1", "keyword-2", "keyword-3"],
                "examples": [
                    "keyword-1",
                    "keyword-2"
                ]
            }
        },
        "status": {
            "type": "string",
            "default": "",
            "title": "The status of the indicator",
            "enum": ["active", "deprecated", "WIP"],
            "examples": ["active"]
        },
        "quality-dimension": {
            "type": "array",
            "default": [],
            "title": "The dimension of the indicator",
            "items": {
                "type": "string",
                "title": "The quality dimensions of the indicator",
                "enum": ["openness",
                    "FAIRness",
                    "sustainability"
                ],
                "examples": ["openness",
                    "FAIRness",
                    "sustainability"
                ]
            }
        },
        "release-date": {
            "type": "string",
            "default": "",
            "title": "The release-date of the indicator (YYYY-MM-DD)",
            "format": "date",
            "pattern": "^(20[0-9]{2})-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$",
            "examples": [
                "2000-01-01",
                "2024-12-31"
            ]
        },
        "version": {
            "type": "string",
            "default": "",
            "title": "The version of the indicator",
            "examples": [
                "0.0.1",
                "v0.0.1"
            ]
        },
        "authors": {
            "type": "array",
            "default": {},
            "title": "The authors of the indicator",
            "items": {
                "type": "string"
            }
        },
        "contacts": {
            "type": "array",
            "default": {},
            "title": "Contacts of the indicator",
            "items": {
                "type": "string"
            }
        },
        "abbreviation": {
            "type": "string",
            "default": "",
            "title": "Short form of the indicator name",
            "examples": [
                "short name"
            ]
        },
        "alternateName": {
            "type": "string",
            "default": "",
            "title": "Alternate name available for the indicator",
            "examples": [
                "alternate name"
            ]
        },
        "sameAs": {
            "type": "array",
            "default": {},
            "title": "URL of a reference web page that unambiguously indicates the indicator's identity",
            "items": {
                "type": "string",
                "examples": [
                    "https://example1.com",
                    "https://example2.com"
                ]
            }
        }
    }
}
